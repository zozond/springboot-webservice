{{>layout/header}}

<h1> 게시글 보기 </h1>

<div class="col-md-12">
    <div class="col-md-4">
        <form>
            <div class="form-group">
                <label for="title">제목</label>
                <input readonly type="text" class="form-control" id="id" placeholder="제목을 입력하세요" value="{{post.id}}">
            </div>
            <div class="form-group">
                <label for="title">제목</label>
                <input readonly type="text" class="form-control" id="title" placeholder="제목을 입력하세요" value="{{post.title}}">
            </div>
            <div class="form-group">
                <label for="author">작성자</label>
                <input readonly type="text" class="form-control" id="author" placeholder="작성자를 입력하세요" value="{{post.author}}">
            </div>
            <div class="form-group">
                <label for="content">내용</label>
                <textarea readonly type="text" class="form-control" id="content" placeholder="내용을 입력하세요">{{post.content}}</textarea>
            </div>
        </form>
        <a href="/" role="button" class="btn btn-secondary">뒤로</a>
    </div>
</div>

{{>layout/footer}}